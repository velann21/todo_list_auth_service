def modules = [:]
pipeline {
    agent none
    stages {

         stage('unit test') {
                  agent { docker {
                                   image 'golang'
                                   args '-u root:sudo -v $HOME'
                     }
                    }
                   steps {

                                          sh 'go version'
                                          sh 'go clean -cache'
                                          sh 'go test ./...'

                         }
               }
        stage('build') {
           agent { label 'slave2' }
            steps {

                                   script {

                                           def customImage = docker.build('singaravelan21/todo_list_auth_srv', "./")
                                           docker.withRegistry('https://registry.hub.docker.com', 'dockerhub') {
                                           customImage.push("v1.0."+"${env.BUILD_NUMBER}")
                                           sh 'docker system prune -af --volumes'
                                            }
                                           }
                  }

        }


                stage('deliver to test') {
                environment {
                    BUILD_NUMBER = "${env.BUILD_NUMBER}"
                  }
                   agent { label 'slave2' }
                   when {
                            branch 'develop'
                        }

                    steps {
                                           script {
                                                   sh '/usr/local/bin/helm upgrade --install --atomic --wait my-todo-auth ./deployments/helmchart/todo-auth-srv/todo-auth-srv-0.1.0.tgz --set tag="v1.0.""$BUILD_NUMBER" --set replicaCount=3 --kubeconfig /home/ec2-user/config'
                                                    }
                                                   }
                          }

                }
      }


